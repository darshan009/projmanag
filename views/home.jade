extends layout

block content
    if(currentUser)
      h1 Welcome #{currentUser.username}
    else
      h1 Welcome to the projmanag
      p Please <a href="/users/login">Login</a> or <a href="/users/create">Signup</a>
    ul
      each user in users
        li
          a(href="/users/#{user._id}") #{user.username}
    a(href="/logout") Logout
    br
    br
    a(href="/projects") Projects
